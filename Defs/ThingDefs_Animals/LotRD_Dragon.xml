  <!-- RACE DEFS -->
  <ThingDef ParentName="AnimalThingBase">
    <defName>LotRD_DragonFireDrakeRace</defName>	
    <label>dragon (fire-drake)</label>
	<thingClass>Dwarves.Dragon</thingClass>
    <description>The most powerful division of dragonkind. As their name implies, fire-drakes are capable of breathing fire on their enemies.</description>
    <tradeability>None</tradeability>
	<statBases>
      <ComfyTemperatureMin>-65</ComfyTemperatureMin>
      <ComfyTemperatureMax>255</ComfyTemperatureMax>
      <MoveSpeed>7.0</MoveSpeed>
      <ArmorRating_Blunt>0.1</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.25</ArmorRating_Sharp>
	  <CarryingCapacity>150</CarryingCapacity>
      <MarketValue>16000</MarketValue>	  
      <MeatAmount>300</MeatAmount>
    </statBases>
    <tools>
	   <li>
        <label>teeth</label>
        <capacities>
          <li>Bite</li>
        </capacities>
        <power>40</power>
        <cooldownTime>2.5</cooldownTime>
        <linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
      </li>
	  <li>
        <label>left claws</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontLeftClaws</linkedBodyPartsGroup>
      </li>
	  <li>
        <label>right claws</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
          <li>Blunt</li>
        </capacities>
        <power>20</power>
        <cooldownTime>1.5</cooldownTime>
        <linkedBodyPartsGroup>FrontRightClaws</linkedBodyPartsGroup>
      </li>
	  <li>
        <label>wings</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>15</power>
        <cooldownTime>3</cooldownTime>
        <linkedBodyPartsGroup>LotRD_Wings</linkedBodyPartsGroup>
      </li>
    </tools>
    <race>
      <wildness>0.985</wildness>
      <thinkTreeMain>Animal</thinkTreeMain>
      <body>LotRD_DragonBody</body>
	  <leatherDef>LotRD_Leather_Dragon</leatherDef>
