        </capacities>
        <power>6</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
      <li>
        <label>tip</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
      <li>
        <label>edge</label>
        <capacities>
          <li>Cut</li>
        </capacities>
        <power>36</power>
        <cooldownTime>3.5</cooldownTime>
      </li>
    </tools>
    <recipeMaker>
      <researchPrerequisite>LongBlades</researchPrerequisite>
    </recipeMaker>
  </ThingDef>
  
